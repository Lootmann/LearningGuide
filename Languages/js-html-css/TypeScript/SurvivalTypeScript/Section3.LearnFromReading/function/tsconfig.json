{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "rootDir": ".",
    "outDir": ".",

    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["main.ts"],
  "exclude": ["node_modules"]
}
